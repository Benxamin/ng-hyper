$pad = 10px

$base-font-size = 17px
$base-font-family = "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
$base-font-family-monospace = monospace
$base-line-height = ($base-font-size * 1.5)

$logo-font-family = "Expletus Sans", sans-serif

*
  -webkit-box-sizing border-box

body, html
  margin 0
  padding 0
  height 100%

body
  font-size $base-font-size
  line-height $base-line-height
  font-family $base-font-family
  background white
  margin 0
  color #33333d
  overflow-y scroll
  overflow-x hidden

a
  color #33a0c0

section
  min-height 50%
  &:not(:last-child)
    border-bottom 1px solid #eee
  &:not(#top)
    padding 150px 100px
    text-align center
  &:nth-child(2n)
    background #fdfdfd
    box-shadow inset 0 1px 0 0 white

pre
  background white
  border-top 1px solid #eee
  border-bottom 1px solid #eee
  padding 25px
  font-size .9em
  font-family monospace
  overflow-x auto

.content
  margin 0 auto
  max-width 750px
  text-align left
  img
    width 100%

p
  font-weight 300
  font-family $base-font-family

code
  font-family monospace
  font-size .9em

h1
  margin-top 0
  font-size 2em
  &:not(:first-child)
    margin-top 50px

h2
  margin-top 80px
  font-size 1.2em

h3
  margin-top 40px
  font-size 1em

ul
  li
    font-size .8em

#top
  height 100%

#heading
  -webkit-user-select none
  position absolute
  top 50%
  margin-top -150px
  text-align center
  width 100%
  margin-top -75px

#logo
  font 150px $logo-font-family
  text-transform lowercase
  font-size 75px

#tagline
  font-size 16px
  font-size 12px

#menu
  position fixed
  top 35px
  right 30px
  z-index 50
  &:hover
    ul
      display block
    a#toggle
      border 1px solid #efefef
      border-bottom none
  a
    color inherit
  a#toggle
    position absolute
    top 0
    right 0
    padding 5px
    background rgba(255,255,255,.9)
    border-radius 2px
    border 1px solid transparent
    z-index 5
  ul
    display none
    position absolute
    top 35px
    right 0
    margin 0
    border 1px solid #efefef
    border-bottom 1px solid #ddd
    border-radius 2px
    padding 25px
    background rgba(255,255,255,.95)
    box-shadow 0 1px 3px 0 #eee
    li
      list-style none
      a
        display block
        text-decoration none
        padding 3px 0
        &:hover
          text-decoration underline

@media screen and (max-width: 700px)
  section not(#top)
    padding: 50px 25px

@media screen and (max-width: 500px)
  body
    font-size 13px

textarea
  width 50%
  font-family $base-font-family-monospace
  font-size 15px
  line-height 18px
  border-style none

textarea
textarea:focus
  outline none
  padding $pad
